---
import '../styles/global.css';

const navItems = [
  { href: '#about', label: 'Acerca de' },
  { href: '#experience', label: 'Experiencia' },
  { href: '#projects', label: 'Proyectos' },
  { href: '#contact', label: 'Contacto' }
];

---

<header class="sticky top-0 z-50 flex justify-center pt-4">
  <nav class="nav-content px-8 py-3 rounded-2xl transition-all duration-300 ease-in-out">
    <ul class="flex justify-center gap-10 list-none m-0 p-0">
      {navItems.map(({ href, label }) => (
        <li>
          <a href={href} class="transition-colors duration-300 hover:text-pink-500 no-underline block px-2 py-1">
            {label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<script src="/src/animations/header.ts"/>