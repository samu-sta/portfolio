---
import '@/styles/global.css';
import Card from './Card.astro';
import { heroCards } from '@/config/heroCards.ts';
---

<main class="grid grid-cols-5 grid-rows-6 gap-3 p-5 w-[920px] h-full">
  {heroCards.map((card) => (
    <Card 
      title={card.title}
      svgIcon={card.svgIcon}
      style={card.style}
    >
      {card.content && <p>{card.content}</p>}
    </Card>
  ))}
</main>